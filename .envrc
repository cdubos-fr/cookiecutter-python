#!/usr/bin/env bash

# Simple direnv bootstrap (no Nix) for the template repository itself

layout_python() {
	if [[ ! -d .venv ]]; then
		echo "[direnv] creating .venv"
		python -m venv .venv
	fi
	# shellcheck disable=SC1091
	source .venv/bin/activate
}

layout_python

export PIP_DISABLE_PIP_VERSION_CHECK=1
export PYTHONDONTWRITEBYTECODE=1

echo "[direnv] .venv active. Run 'pip install -e .[dev,typing,tests,docs,security]' or 'just devenv' inside generated projects."
